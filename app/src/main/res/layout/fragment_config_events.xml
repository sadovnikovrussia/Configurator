<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_config_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/tv_config_alarm_events"
                style="@style/tv_subtitle"
                android:text="@string/alarm_events" />

            <Button
                android:id="@+id/btn_alarm_events"
                style="@style/btn_command"
                android:text="@string/create_test_message" />

            <TextView
                android:id="@+id/tv_config_events_mask"
                android:text="@string/events_mask"
                style="@style/tv_subtitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="16dp">

                <CheckBox
                    android:id="@+id/cb_9"
                    style="@style/cb_list_item"
                    android:text="@string/event_1" />

                <CheckBox
                    android:id="@+id/cb_10"
                    style="@style/cb_list_item"
                    android:text="@string/event_2" />


                <CheckBox
                    android:id="@+id/cb_11"
                    style="@style/cb_list_item"
                    android:text="@string/event_3" />

                <CheckBox
                    android:id="@+id/cb_12"
                    style="@style/cb_list_item"
                    android:text="@string/event_4" />

                <CheckBox
                    android:id="@+id/cb_13"
                    style="@style/cb_list_item"
                    android:text="@string/event_5" />

                <CheckBox
                    android:id="@+id/cb_14"
                    style="@style/cb_list_item"
                    android:text="@string/event_6" />

                <CheckBox
                    android:id="@+id/cb_15"
                    style="@style/cb_list_item"
                    android:text="@string/event_7" />

                <CheckBox
                    android:id="@+id/cb_16"
                    style="@style/cb_list_item"
                    android:text="@string/event_8" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>